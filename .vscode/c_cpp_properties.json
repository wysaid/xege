{
    "version": 4,
    "configurations": [
        {
            "name": "default",
            "cStandard": "c17",
            "cppStandard": "c++17",
            "defines": [
                "_FORTIFY_SOURCE=0"
            ],
            "includePath": [
                "${workspaceFolder}/include",
                "${workspaceFolder}/include/ege",
                "${workspaceFolder}/3rdparty/libpng"
            ],
            "configurationProvider": "ms-vscode.cmake-tools",
            "compilerArgs": [
                "/Zc:__cplusplus"
            ]
        }
    ]
}